<div class="row">
  <div class="col">
    <h3 class="text-secondary">In Stock</h3>
      <% @in_stock.each do |product| %>
      <div class="card mt-3 stores-products">
        <div class="card-header">
          <h5><a class="text-success" href="/products/<%= product.id %>"> <%= product.name %> </a></h5>
        </div>
        <div class="card-text ml-2">
          <p>Price: $<%= product.price %></p>
          <p>Origin: <%= product.origin %></p>
        </div>
      </div>
      <% end %>
  </div>
  <div class="col">
    <h3 class="text-secondary">Out of Stock</h3>
    <% @out_of_stock.each do |product| %>
      <div class="card mt-3 stores-products">
        <div class="card-header">
          <h5><a class="text-success" href="/products/<%= product.id %>"> <%= product.name %> </a></h5>
        </div>
        <div class="card-text ml-2">
          <p>Price: $<%= product.price %></p>
          <p>Origin: <%= product.origin %></p>
          <p class="font-weight-light text-danger"><%= product.out_of_stock %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
