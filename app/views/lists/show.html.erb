<h2><%= @list.title %></h2>

<ol>
  <% @products.each do |product| %>
    <li> <%= link_to product.name, product %> </li>
    <p class="font-weight-light text-danger"><%= product.out_of_stock %></p>
  <% end %>
</ol>

<%= link_to 'Edit List', edit_list_path(@list) %>

<%= link_to 'Filter Stores by List', filter_stores_path %>
