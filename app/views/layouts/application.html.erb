<!DOCTYPE html>
<html>
  <head>
    <title>Lysty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if !@home_page %>
    <%= button_to 'Home', root_path, method: :get %>
  <% end %>

  <% if logged_in? %>
    <%= button_to 'My Account', '/my_account', method: :get %>
    <%= button_to 'Logout', logout_path, method: :get %>
  <% end %>


  <body>
    <%= yield %>

  <% if logged_in? %>
    <% if @home_page %>
      <%= button_to 'New List', '/lists/new', method: :get %>
    <% end %>

    <%= button_to 'Products', products_path, method: :get %>
    <%= button_to 'Stores', stores_path, method: :get %>
  <% end %>
  </body>
</html>
