<% if @user.any_errors? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.error_count, "error") %>
      prohibited your account from being created:
    </h2>

    <ul>
    <% @user.error_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<ul style= "list-style: none">
  <%= form_for :user, url: '/signup' do |f| %>
    <li> <%= f.label :name %> </li>
    <li> <%= f.text_field :name %> </li>

    <li> <%= f.label :email %> </li>
    <li> <%= f.email_field :email %> </li>

    <li> <%= f.label :password %> </li>
    <li> <%= f.password_field :password %> </li>

    <li> <%= f.label :password_confirmation %> </li>
    <li> <%= f.password_field :password_onfirmation %> </li>

    <li> <%= f.submit %> </li>
  <% end %>
</ul>
